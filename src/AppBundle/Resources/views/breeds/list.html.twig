{% extends "::layout.html.twig" %}

    {% block body %}

        <div class="jumbotron">
            <div class="container">

                <div class="row">


                    <div class="col-lg-3">
                        <img class="img-thumbnail"
                             src="https://pbs.twimg.com/profile_images/672404074474573824/sJyMOznQ.jpg"
                             style="height: 270px;"/>
                    </div>

                    <div class="bs-callout bs-callout-info col-lg-9">
                        <h1>Kitty Online</h1>
                        <p>The internet's #1 resource for stats about cats*</p>

                        <p><small>* Except, maybe, for Wikipedia, which is where these stats were stolen from</small></p>
                    </div>
                </div>

            </div>
        </div>

        <div class="container marketing">

            <h2>{{ stats_breeds_count() }} Breeds</h2>

            <table class="table table-bordered table-striped">

                <thead>
                <tr>
                    <th>#</th>
                    <th>Breed Name</th>
                    <th>Number of kitties</th>
                    <th>Introduction</th>
                </tr>
                </thead>

                <tbody>

                {% for breed in breeds %}

                    <tr>
                        <td>{{ breed.id }}</td>
                        <td><a href="{{ path('breed-show', { slug: breed.slug }) }}">{{ breed.name }}</a></td>
                        <td>{{ breed.count }}</td>
                        <td>{{ breed.introduction | nl2br }}</td>
                    </tr>

                {% endfor %}

                </tbody>

            </table>
        </div>

    {% endblock %}
